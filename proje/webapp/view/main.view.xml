<mvc:View controllerName="sertifakalifirmalar.proje.controller.main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f" xmlns:fb="sap.ui.comp.filterbar"
		xmlns:u="sap.ui.unified"
	 >
    <Page id="page" title="{i18n>title}">
        <content >

        	<IconTabBar
		id="idIconTabBarNoIcons"
		expanded="{device>/isNoPhone}"
		class="sapUiResponsiveContentPadding">
		<items>
			<IconTabFilter text="Tüm Sertifikalı Firmaları Listele" key="tum">
				
				<core:Fragment fragmentName="sertifakalifirmalar.proje.fragments.TumSertifikaliFirmalar" type="XML" />
			</IconTabFilter>
			<IconTabFilter text="Kriterlere Göre Listele" key="kriterler">
				<core:Fragment fragmentName="sertifakalifirmalar.proje.fragments.KriterlereGoreListele" type="XML" />
			</IconTabFilter>
			
		</items>
	</IconTabBar>
        </content>
    </Page>
</mvc:View>
